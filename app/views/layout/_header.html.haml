#header
  %h1
    %a.replace#logo{:href => url(:root), :name => "logo", :title => AppConfig.site_name}
      %span &nbsp;
      = AppConfig.site_name

  .address
    = link_to image_tag("slogan.png"), "#", :class => "toggle", :rel => "#about_us"
    
  #menu
    %ul
      - if active_tab.is_a? String
        %li= menu_item(active_tab, "#", true)
      %li= menu_item("Gallery (#{Project.in_gallery.count})", url(:gallery), active_tab == :gallery)
      %li= menu_item("Upcoming (#{Project.upcoming.count})", url(:upcoming), active_tab == :upcoming)
      %li= menu_item("Profile", "#", active_tab == :profile)
      
    = clear
  = partial "sessions/login_panel"
